    def loginAccount(self):
        self.login1 = QtWidgets.QMainWindow()
        self.ui = login.Ui_Form()
        self.ui.setupUi(self.login1)
        self.login1.show()
        self.window.close()

    def goToStore(self):
        self.storePage= QtWidgets.QMainWindow()
        self.ui= storeForCustomer.Ui_Form()
        self.ui.setupUi(self.storePage,self.UserLine.text())
        self.storePage.show()
        self.window.close()

    def signUpAccount(self):
        username= self.UserLine.text()
        password= self.PassLine.text()
        users= open("database.txt","a")
        users.write("\n"+username+" "+password)
        users.close()
        self.goToStore()
    def retranslateUi(self, Form):
        _translate = QtCore.QCoreApplication.translate
